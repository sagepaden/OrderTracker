@{
    Layout = "_Layout";
}

@using OrderTracker.Models;

<h3>Current Vendors Orders:</h3>

<ol>
@foreach (Order order in @Model["orders"])
{
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>New Order</a></p>
<p><a href='/vendors'>Vendor List</a></p>
<p><a href='/'>Go Home</a></p>