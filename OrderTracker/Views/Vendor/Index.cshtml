@{
    Layout = "_Layout";
}

@using OrderTracker.Models;

<h1>Vendors:</h1>

@if (@Model.Count == 0)
{
    <h3>Add some Vendors!</h3>
} 

@foreach (Vendor vendor in Model)
{
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@vendor.VendorName</h4>
            <p class="card-text">@vendor.VendorDescription</p>
            <a href='/vendors/@vendor.Id' class="btn btn-primary">View Vendor</a>
        </div>
    </div>
}

<a href='/vendors/new'>New Vendor</a>

<p><a href='/'>Go Home</a></p>